;;;******************************************************************************
;;; Part 1. ATTRIBUTE-VALUE-PAIR API
;;;******************************************************************************

;;; An attribute-value pair is represented as a list of:
;;;
;;;(<attribute-name><attribute-value>)

;;;------------------------------------------------------------------------------
;;; AVP-ATTRIBUTE
;;;------------------------------------------------------------------------------

(defmethod AVP-ATTRIBUTE ((attribute-value LIST))
  (first attribute-value))

;;;------------------------------------------------------------------------------
;;; AVP-VALUE
;;;------------------------------------------------------------------------------

(defmethod AVP-VALUE ((attribute-value LIST))
  (second attribute-value))


